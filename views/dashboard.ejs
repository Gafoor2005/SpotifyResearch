<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify Dashboard</title>
</head>
<body>
    <h2 style="background-color: darkblue; color: white;"><%= msg %>!</h2>
    <h1>Welcome, <%= user.display_name %>!</h1>
    <img src="<%= user.images[0]?.url %>" alt="Profile Image" width="150">

    <h2>üéµ Top Artists</h2>
    <ul>
        <% topArtists.forEach(artist => { %>
            <li>
                <img src="<%= artist.images[0]?.url %>" width="50">
                <%= artist.name %>
            </li>
        <% }) %>
    </ul>

    <h2>üéß Top Tracks</h2>
    <ul>
        <% topTracks.forEach(track => { %>
            <li>
                <img src="<%= track.album.images[0]?.url %>" width="50">
                <%= track.name %> - <%= track.artists.map(a => a.name).join(", ") %>
            </li>
        <% }) %>
    </ul>

    <h2>‚ù§Ô∏è Liked Songs</h2>
    <ul>
        <% likedSongs.forEach(song => { %>
            <li>
                <img src="<%= song.track.album.images[0]?.url %>" width="50">
                <%= song.track.name %> - <%= song.track.artists.map(a => a.name).join(", ") %>
            </li>
        <% }) %>
    </ul>

    <a href="/login">Logout</a>
</body>
</html>
